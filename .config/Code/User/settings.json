{
  "workbench.editor.closeEmptyGroups": false,
  "workbench.colorCustomizations": {
    // "editor.background": "#000",
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "vue-html": "html",
    "vue": "html"
  },
  // "emmet.syntaxProfiles": { "javascript": "html" },
  "emmet.syntaxProfiles": {
    "javascript": "jsx",
    "typescript": "jsx",
    "typescriptreact": "jsx"
  },
  "editor.find.seedSearchStringFromSelection": "selection",
  "keyboard.dispatch": "keyCode",
  "emmet.validateAbbreviationLocation": false,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "timeline.excludeSources": ["git-history"],
  "markdown.preview.fontSize": 13,
  "workbench.settings.enableNaturalLanguageSearch": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "vim.useSystemClipboard": true,
  "debug.javascript.autoAttachFilter": "disabled",
  "editor.tabCompletion": "off",
  "scm.autoReveal": false,
  "explorer.autoReveal": "focusNoScroll",
  "editor.parameterHints.enabled": false,
  "editor.fontSize": 12,
  "prettier.enableDebugLogs": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.menuBarVisibility": "hidden",
  "editor.scrollbar.vertical": "visible",
  "workbench.activityBar.location": "hidden",
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.wrapTabs": true,
  "workbench.editor.tabSizingFixedMinWidth": 100,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/.config/nvim/init.vim",
  "extensions.ignoreRecommendations": true,
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "update.showReleaseNotes": false,
  "git.optimisticUpdate": false,
  "workbench.editor.tabSizingFixedMaxWidth": 100,
  "workbench.editor.editorActionsLocation": "hidden",
  "editor.codeActionWidget.showHeaders": false,
  "editor.lightbulb.enabled": "off",
  "editor.snippets.codeActions.enabled": false,
  "gitlens.currentLine.scrollable": false,
  "editor.hover.sticky": false,
  "prettier.printWidth": 500,
  "update.mode": "none",
  "typescript.tsserver.web.projectWideIntellisense.enabled": false,
  "html.autoCreateQuotes": false,
  "workbench.colorTheme": "Gruvbox Material Dark",
  "gruvboxMaterial.darkContrast": "hard",
  "gruvboxMaterial.darkSelection": "orange",
  "gruvboxMaterial.darkPalette": "mix",
  "github.copilot.enable": {
    "*": false,
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "workbench.editor.empty.hint": "hidden",
  "bookmarks.navigateThroughAllFiles": false,
  "bookmarks.keepBookmarksOnLineDelete": true
}
